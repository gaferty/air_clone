<div class="row mt-3">
    <div class="col">
        <%= simple_form_for [venues, booking], html: { class: "mb-2" } do |l| %>
            <%= l.input :start_date %>
            <%= l.input :end_date %>
            <div class="d-flex justify-content-between">
                <%= link_to "Back", :back, class: "btn btn-secondary mt-2" %>
                <%= l.submit "Create Booking", class: "btn btn-flat mt-2" %>
            </div>
        <% end %>
    </div>
</div>
