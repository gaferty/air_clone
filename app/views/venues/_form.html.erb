<div class="container  bg-light">
  <%= simple_form_for venue do |f|%>
    <%=f.input :name%>
    <%=f.input :location%>
    <%=f.input :capacity, input_html: {min: '0'}%>
    <%=f.input :venue_type , collection: [['church', "Church"], ['hall', "Hall"], ['theatre',"theatre"], ['restaurant', 'Restaurant'], ['conference-center', 'Conference Center'], ['bar', 'Bar']] , label_method: :second, value_method: :first %>
    <%=f.input :details%>
    <div class="d-flex justify-content-center">
      <%= f.submit class: 'btn btn-dark'%>
    </div>

  <%end%>

</div>
